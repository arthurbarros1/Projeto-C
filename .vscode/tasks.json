{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-13 build active file",
            "command": "/usr/bin/gcc-13",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/Projeto-C/include",
                "${workspaceFolder}/Projeto-C/src/main.c",
                "${workspaceFolder}/Projeto-C/src/screen.c",
                "${workspaceFolder}/Projeto-C/src/keyboard.c",
                "${workspaceFolder}/Projeto-C/src/timer.c",
                "-o",
                "${workspaceFolder}/Projeto-C/bin/main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
